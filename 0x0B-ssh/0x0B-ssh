#!/usr/bin/env bash
# Set the server IP or hostname and the SSH public key

SERVER_IP="52.3.249.217"
SSH_PUBLIC_KEY="ssh-rsa "

# Log in to the server as the ubuntu user and add the SSH public key
ssh ubuntu@$SERVER_IP "mkdir -p ~/.ssh && echo $SSH_PUBLIC_KEY >> ~/.ssh/authorized_keys && chmod 700 ~/.ssh && chmod 600 ~/.ssh/authorized_keys"
